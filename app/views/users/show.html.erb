<% title "SECC | User" %>
<% title "SECC | Districts" %>
<div id="page_container">
  <div id="page_content">
    <div class="content">
      <h3>Users | View User Details</h3>

      <table width="100%" border=0 cellspacing=1 cellpadding=3 class="listTable">
        <tr>
          <th width="20%">Login</th>
          <td><%= @user.login %></td>
        </tr>
        <tr>
          <th width="20%">Name</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th width="20%">Mobile</th>
          <td><%= @user.mobile_number %></td>
        </tr>
        <tr>
          <th width="20%">State</th>
          <td><%= @user.user_profile.state_id? ? @user.user_profile.state.name : 'N.A' %></td>
        </tr>
        <tr>
          <th width="20%">District</th>
          <td><%= @user.user_profile.district_id? ? @user.user_profile.district.name : 'N.A' %></td>
        </tr>
        <tr>
          <th width="20%">Revenue Block</th>
          <td><%= @user.user_profile.revenue_block_id? ? @user.user_profile.revenue_block.name : 'N.A' %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
