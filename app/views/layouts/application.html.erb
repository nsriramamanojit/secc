<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? yield(:title) : "SECC" %></title>
  <%= stylesheet_link_tag "application","common",'facebox' %>
  <%= javascript_include_tag :defaults,'rails.validations.js','facebox' %>
  <%= csrf_meta_tag %>
  <%= yield(:head) %>
</head>
<body>
<div id="page_container">
  <%= render 'common/header'%>
  <div id="page_menu">
    <%= render 'common/menu' if  has_role?(:super_admin) %>
    <%= render 'common/block_menu' if  has_role?(:block_admin) %>

  </div>
  <div id="page_content">
    <div class="content">
      <%=yield :sub_heading %>
      <div class="content_index">
        <table cellpadding="0" cellspacing="0" width="100%">
          <tbody>
          <tr>
            <%= yield :left_panel %>
            <td width="5"> &nbsp;</td>
            <td valign="top">
              <div class="right_content">
                <div class="margin">
                  <%= render :partial=>'common/flash_message' %>
                  <%= yield %>
                </div>
              </div>
            </td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<%= render :partial=>'common/footer' %>
</body>
</html>