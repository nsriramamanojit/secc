<% title "VEDAVAAG | SECC | Districts" %>
<div id="page_container">
  <div id="page_content">
    <div class="content">
      <h3>VEDAVAAG | SECC | Districts | View District Details</h3>

      <table width="100%" border=0 cellspacing=1 cellpadding=3 class="listTable">
        <tr>
          <th width="20%">Name</th>
          <td><%= @district.name %></td>
        </tr>
        <tr>
          <th width="20%">Reference Code</th>
          <td><%= "%02d"% @district.reference_number %></td>
        </tr>
        <tr>
          <th width="20%">Reference Name</th>
          <td><%= @district.reference_name %></td>
        </tr>
        <tr>
          <th width="20%">State Name</th>
          <td><%= @district.state.name %></td>
        </tr>
        <tr>
          <th width="20%">Description</th>
          <td><%= @district.description %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
