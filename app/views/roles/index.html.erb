<% title "SECC | Roles" %>
<h3>SECC | Roles | Manage Roles</h3>
<%# content_for :sub_heading do %>
<%# sub_heading('SECC | Roles', 'Manage Roles') %>
<%# end %>
<% content_for :left_panel do %>
    <td valign="top" width="250"> <%= render 'common/search' %>
      <%= render 'recent' %> </td>
<% end %>
<div class="help_text">
  Area for managing Roles. <br/>
  Along with creating, managing and removing Roles for Application.
</div>
<div>
  <%= link_to "Create New Role", "#", :class=>'usuallink bold_text', :id=>'add_new' %>
</div>
<div id="new_form">
  <%= render 'form' %>
</div>

<% if @roles.blank? %>
    <div class="error_msg">
      OOPS!.. No Topics are Found in the System..!
    </div>
<% else %>
    <table class="tablesorter">
      <thead>
      <tr>
        <th>SNo</th>
        <th>Name</th>
        <th>Reference Name</th>
        <th>Description</th>
        <th>Users</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% i=1 %>
      <% @roles.each do |role| %>
          <tr>
            <td><%= i %></td>
            <td><%= role.name %></td>
            <td><%= role.short_name %></td>
            <td><%= role.description %></td>
            <td></td>
            <td>
              <%= link_for_show_pop(role) %>
              <%= link_for_edit(edit_role_path(role)) %>
            </td>
          </tr>
          <% i = i + 1 %>
      <% end %>
      </tbody>
    </table>
<% end %>


