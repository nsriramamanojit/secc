<div id="page_container">
	<div id="page_content">
		<div class="content">
			<h3>States | View State Details</h3>

<table width="100%" border=0 cellspacing=1 cellpadding=3 class="listTable">
			<tr>
				<th width="20%">Name</th>
				<td><%= @state.name %></td>
			</tr>
			<tr>
				<th width="20%">Reference Code</th>
				<td><%= "%02d"% @state.reference_number %></td>
			</tr>
			<tr>
				<th width="20%">Reference Name</th>
				<td><%= @state.reference_name %></td>
			</tr>
			<tr>
				<th width="20%">Description</th>
				<td><%= @state.description %></td>
			</tr>
</table>
		</div>
	</div>
</div>
