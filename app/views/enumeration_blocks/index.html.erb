<% title "VEDAVAAG | SECC | Enumeration Blocks" %>
<h3>VEDAVAAG | SECC | Manage | Enumeration Blocks</h3>

<div class="help_text">
  Area for managing Enumeration Blocks. <br/>
  Along with creating, managing Enumeration Blocks for Application. <br/>
</div>
<div class="link_buttons">
  <%= link_to content_tag(:span, 'New Enumeration Block'), new_enumeration_block_path, :class => 'btn-blue' if permitted_to? :create %>
  <%= link_to content_tag(:span, 'Home'), homes_url, :class => 'btn-blue' %>
</div>

<% if @enumeration_blocks.blank? %>
    <div class="error_msg">
      OOPS!.. No Enumeration Blocks are Found for Revenue Block ...!
    </div>
<% else %>
    <table width="100%">
      <tr>
        <td align="right">
          <b><i>per page</i></b>
          <%= per_page %>| <%= page_entries_info @enumeration_blocks %>
        </td>
      </tr>
    </table>
    <table class="tablesorter">
      <thead>
      <tr>
        <th>SNo</th>
        <th>Enumeration No</th>
        <th>Sub EB No</th>
        <th>Houses</th>
        <th>Citizens</th>
        <th>Panchayat</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% i=1 %>
      <% @enumeration_blocks.each do |eb| %>
          <tr>
            <td><%= i %></td>
            <td><%= eb.reference_number %></td>
            <td><%= eb.sub_enumeration_number %></td>
            <td><%= eb.number_of_houses %></td>
            <td><%= eb.number_of_citizens %></td>
            <td><%= eb.panchayat_id? ? eb.panchayat.name : ""  %></td>
            <td>
              <%= link_for_show_pop(eb) %>
            </td>
          </tr>
          <% i = i + 1 %>
      <% end %>
      </tbody>
    </table>
    <div class="flickr_pagination">
      <%= page_entries_info @enumeration_blocks %> <%= will_paginate @enumeration_blocks, :container => false %>
    </div>
<% end %>










