<% title "SECC | Enumeration Blocks" %>
<h3>SECC | Status Report | Enumeration Blocks</h3>

<div class="help_text">
  * Area for managing Enumeration Blocks Status. <br/>
  * Codes: <b>E-NIC</b> - Enumeration NIC Upload, <b>S-NIC</b> - Supervising NIC Upload Status, <b>Draft</b> - Draft
  Print List,
  <b>Edit</b> - Draft List Modification Status and <b>Final</b> - Final List
</div>
<div id="container">
  <%= link_to "View Consolidated Report", status_report_enumeration_blocks_path, :class => 'usuallink bold_text', :rel => 'facebox' %>
  |
  <%= link_to "Download Consolidate Report", "#", :class => "usuallink bold_text" %> |
  <%= link_to "Download Status Report", "#", :class => "usuallink bold_text" %>

  <%= collection_select(:enumeration_block, :panchayat_id, Panchayat.order(:name), :id, :name, {:prompt => "Select Panchayat"}, :class => "width_auto position_right") %>
</div>
<br/>
<% if @enumeration_blocks.blank? %>
    <div class="error_msg">
      OOPS!.. No Enumeration Blocks are Found in the System..!
    </div>
<% else %>
    <table class="tablesorter">
      <thead>
      <tr>
        <th>SNo</th>
        <th>Status</th>
        <th>Panchayat</th>
        <th>EB#</th>
        <th>Sub EB</th>
        <th>Houses</th>
        <th>Citizens</th>
        <th>Catalog</th>
        <th>Enumeration</th>
        <th>E-NIC</th>
        <th>Supervising</th>
        <th>S-NIC</th>
        <th>Draft</th>
        <th>Edit</th>
        <th>Final</th>
        <th>Remarks</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% i=1 %>
      <% @enumeration_blocks.each do |eb| %>
          <tr>
            <td><%= i %></td>
            <td>
              <div id="report_status_<%= eb.id %>">
                <%= link_to eb.report_status? ? image_tag('tick.gif') : image_tag('cros.gif'), approve_enumeration_block_path(eb), :remote => true %>
              </div>

            </td>
            <td><%= eb.panchayat.name + " (" + eb.panchayat.reference_number.to_s + ")" %></td>
            <td><%= eb.reference_number %></td>
            <td><%= eb.sub_enumeration_number %></td>
            <td><%= eb.number_of_houses %></td>
            <td><%= eb.number_of_citizens %></td>
            <td><%= eb.catalog_status %></td>
            <td><%= eb.enumeration_status %></td>
            <td><%= eb.enu_nic_upload_status %></td>
            <td><%= eb.supervising_status %></td>
            <td><%= eb.super_nic_upload_status %></td>
            <td><%= eb.draft_list_status %></td>
            <td><%= eb.draft_list_edit_status %></td>
            <td><%= eb.final_list_status %></td>
            <td><%= truncate(eb.remarks, :length => 8) %></td>
            <td>
              <%= link_to "Update", update_status_enumeration_block_path(eb), :class => 'usuallink bold_text', :rel => "facebox" %>
            </td>
          </tr>
          <% i = i + 1 %>
      <% end %>
      </tbody>
    </table>
<% end %>










