<% title "VEDAVAAG | SECC | Revenue Blocks" %>
<div id="page_container">
  <div id="page_content">
    <div class="content">
      <h3>VEDAVAAG | SECC |Revenue Blocks | View Revenue Block Details</h3>

      <table width="100%" border=0 cellspacing=1 cellpadding=3 class="listTable">
        <tr>
          <th width="20%">Name</th>
          <td><%= @revenue_block.name %></td>
        </tr>
        <tr>
          <th width="20%">Reference Code</th>
          <td><%= "%03d"% @revenue_block.reference_number %></td>
        </tr>
        <tr>
          <th width="20%">Reference Name</th>
          <td><%= @revenue_block.reference_name %></td>
        </tr>
        <tr>
          <th width="20%">State Name</th>
          <td><%= @revenue_block.state.name %></td>
        </tr>
        <tr>
          <th width="20%">District Name</th>
          <td><%= @revenue_block.district.name %></td>
        </tr>
        <tr>
          <th width="20%">Description</th>
          <td><%= @revenue_block.description %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
